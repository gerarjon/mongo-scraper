<div class="row">
    <h1>{{article.title}}</h1>
    <div>
        <p>{{body}}</p>
    </div>
</div>

<div class="row">
    <div class="col s2"></div>
    <form action="/comment/{{article._id}}" method="POST" class="col s8">
        <h5>Comment on this Article</h5>
        <div class="row">
            {{!-- Name --}}
            <div class="input-field">
                <i class="material-icons prefix">perm_identity</i>
                <input type="text" id="icon_prefix" placeholder="Name" name="name" class="validate active">
            </div>

            {{!-- Comment --}}
            <div class="input-field">
                <i class="material-icons prefix">comment</i>
                <input type="text" placeholder="Comment" name="comment" id="icon_telephone" class="validate active">
            </div>
        </div>

        {{!-- Submit button --}}
        <div class="row">
            <div class="input-field">
                <center><input type="submit" value="submit" class="btn add-comment-button"></center>
            </div>
        </div>
    </form>
</div>

{{!-- Comments section --}}
<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <h5>Comments:</h5>
        {{#if article.comment}}
            {{#each article.comment}}
            <div class="card">
                <p id="nameComment">{{name}}</p>
                <p>{{body}}</p>
            </div>
            {{/each}}
            {{else}}
            <p>The comments are empty...</p>
        {{/if}}
    </div>
</div>